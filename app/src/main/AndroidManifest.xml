<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.project.kotoba">

    <application
        android:name=".KotobaApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo_kotoba"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_kotoba"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotoba"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".ui.practice.n5.PracticeN5Activity"
            android:exported="false" />
        <activity
            android:name=".ui.practice.n4.PracticeN4Activity"
            android:exported="false" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.kategori.n4.KategoriN4Activity"
            android:exported="false" />
        <activity
            android:name=".ui.kategori.n5.KategoriN5Activity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".ui.setting.AlarmReceiver" />
    </application>

</manifest>